APXS=@APXS@
EXTRA_CFLAGS=@CFLAGS@ @TLS@
LIBS=@LIBS@
LDFLAGS=@LDFLAGS@
ACTIVATE=@ACTIVATE@

mod_ldap_userdir.so: mod_ldap_userdir.c
	$(APXS) -c -o mod_ldap_userdir.so $(EXTRA_CFLAGS) $(LDFLAGS) $(LIBS) mod_ldap_userdir.c -shared

install: mod_ldap_userdir.so
	$(APXS) -i $(ACTIVATE) mod_ldap_userdir.so

clean:
	rm -rf *.lo *.slo *.so *.o .libs/ *~ core

distclean: clean
	rm -f Makefile config.status config.cache config.log
